open Base
open Stdio

let capture_game s =
  let pattern = Str.regexp "(Game \d+)" in
  let replaced = Str.replace_first pattern s "" in
  let captured = Str.matched_group 1 s in
  captured, replaced
;;

(* Game 1: 3 blue, 4 red; 1 red, 2 green, 6 blue; 2 green *)

let parse_game s =
  let c, r = capture_game s in
  printf "%s\n" c
;;

let () = In_channel.read_lines "data/2a.txt" |> List.iter ~f:print_endline
